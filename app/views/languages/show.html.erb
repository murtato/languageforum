<h1> <%= @language.name %> </h1>

<% @language.conversations.each do |c| %>
  <p class="p"><%= link_to "Enter Cafe", language_conversation_path(c.language, c) %> - <%= c.title %></p>
<% end %>
<ul class="clinks" style="list-style:none;">
<li><%= link_to "Start Language Exchange", new_language_conversation_path(@language) %></li>
<li><%= link_to "Edit this language", edit_language_path(@language) %></li>
<li><%= link_to "Delete this language?", language_path(@language), method: :delete, data: { confirm: "Are you sure you want to delete this language?"} %></li>
<li><%= link_to "Back to the Cafe", languages_path %></li>
</ul>
