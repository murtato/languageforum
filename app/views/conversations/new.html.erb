<h1>Start a new language exchange!</h1>

<%= form_for @conversation do |f| %>

    <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>

    <div>
        <%= f.label :time %>
        <%= f.text_field :time %>
    </div>

    <%= f.submit "Start new conversation!" %>

<% end %>

<%= link_to "Back to the list!", conversations_path %>
